{
  "id": "app.drey.Biblioteca",
  "runtime": "org.gnome.Platform",
  "runtime-version": "46beta",
  "sdk": "org.gnome.Sdk",
  "sdk-extensions": ["org.gnome.Sdk.Docs"],
  "command": "biblioteca",
  "finish-args": [
    "--share=network",
    "--share=ipc",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--device=dri"
  ],
  "cleanup": [
    "/include",
    "/lib/pkgconfig",
    "/man",
    "#/share/doc",
    "/share/gtk-doc",
    "/share/man",
    "/share/pkgconfig",
    "/share/installed-tests",
    "*.la",
    "*.a"
  ],
  "modules": [
    "modules/gi-docgen.json",
    "modules/vte.json",
    "modules/libshumate.json",
    "modules/libportal.json",
    "modules/libspelling.json",
    "modules/blueprint-compiler.json",
    {
      "name": "Biblioteca",
      "buildsystem": "meson",
      "config-opts": ["-Dprofile=default"],
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/workbenchdev/Biblioteca.git",
          "commit": "78f7e03a6bc8ee4d5cf1a8e0e2d6dd95adfec151",
          "tag": "v1.3beta"
        }
      ],
      "post-install": ["cp -a /usr/share/runtime/docs/doc/. /app/share/doc/"]
    }
  ]
}
