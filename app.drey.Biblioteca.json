{
  "id": "app.drey.Biblioteca",
  "runtime": "org.gnome.Platform",
  "runtime-version": "47",
  "sdk": "org.gnome.Sdk",
  "sdk-extensions": ["org.gnome.Sdk.Docs"],
  "command": "biblioteca",
  "separate-locales": false,
  "finish-args": [
    "--share=network",
    "--share=ipc",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--device=dri"
  ],
  "cleanup": [
    "/include",
    "/lib/pkgconfig",
    "/man",
    "#/share/doc",
    "/share/gtk-doc",
    "/share/man",
    "/share/pkgconfig",
    "/share/installed-tests",
    "*.la",
    "*.a"
  ],
  "modules": [
    "modules/gi-docgen.json",
    "modules/vte.json",
    "modules/libshumate.json",
    "modules/libportal.json",
    "modules/libspelling.json",
    "modules/blueprint-compiler.json",
    "modules/gom.json",
    "modules/sdk-docs.json",
    {
      "name": "Biblioteca",
      "buildsystem": "meson",
      "config-opts": ["-Dprofile=default", "--libdir=lib"],
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/workbenchdev/Biblioteca.git",
          "commit": "288fd137726ce196a628b58385af466d435b4b79",
          "tag": "v1.5"
        }
      ]
    }
  ],
  "build-options": {
    "env": {}
  }
}
